<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.TuPokedex" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/yellow_pikachu</item>
        <item name="colorPrimaryContainer">@color/orange_variant</item>
        <item name="colorSecondary">@color/blue_squirtle</item>
        <item name="colorSecondaryContainer">@color/blue_dark</item>
        <item name="colorSurface">@color/gray_light</item>
        <item name="colorOnSurface">@color/gray_dark</item>
        <item name="backgroundColor">@color/white</item>
        <item name="colorOnBackground">@color/gray_dark</item>
        <item name="colorError">@color/red_coral</item>
        <item name="colorOnError">@color/white</item>

        <!-- SplashScreen configuration-->
        <item name="postSplashScreenTheme">@style/Theme.TuPokedex</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/ic_launcher</item>
        <item name="android:windowSplashScreenAnimationDuration">2500</item>
        <item name="android:windowSplashScreenIconBackgroundColor">@color/white</item>
        <item name="android:windowSplashScreenBackground">@color/yellow_pikachu</item>

    </style>

    <style name="Theme.TuPokedex" parent="Base.Theme.TuPokedex" />
</resources>